/* pages/list/list.wxss */
.list{
  display: flex;
  justify-content: space-around;
}
.list view{
  text-align: center;
  width: 50px;
  height: 50px;
  line-height: 50px;
}
.list view:nth-child(1){
  background-color: pink;
}
.list view:nth-child(2){
  background-color: blue;
}
.list view:nth-child(3){
  background-color: green;
}

.swipe-item{
  height: 150px;
  margin-top: 20px;
}
.item{
  height: 100%;
  line-height: 150px;
  text-align: center;
}
.item:nth-child(1) {
  background-color: pink;
}
.item:nth-child(2){
  background-color: blue;
}
.item:nth-child(3){
  background-color: green;
}
 
.box{
  width: 100px;
  height: 100px;
  margin: 20px;
}