.top {
  width: 100%;
  height: 210px;
  position: relative;
  transition: all 1s;
}
.top .swipering {
  width: 93%;
  position: absolute;
  left: 10px;
  top: 60px;
  border-radius: 20px;
}
.top .swipering .imgs {
  width: 100%;
  height: 100%;
  border-radius: 20px 20px;
}
.ipt-box {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.ipt-box .ipt-top {
  width: 98%;
  height: 30px;
  border: 0;
  border-radius: 20px;
  background-color: #fff;
  text-align: center;
  font-size: 14px;
}
.NavList {
  width: 100%;
  height: 100px;
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
}
.NavList .NavList-name {
  width: 20%;
  height: 35px;
  background-color: #f8f9fb;
  border-radius: 10px;
  text-align: center;
  line-height: 30px;
  margin: 5px 8px;
  font-size: 13px;
}
.host {
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.host ._p {
  font-size: 20px;
  padding-left: 10px;
}
.host ._span {
  font-size: 14px;
  color: #ccc;
  padding-right: 10px;
}
.scrollTest {
  width: 200vw;
  overflow-x: scroll;
}
.scrollTest::-webkit-scrollbar {
  display: none;
}
.scrollTest .box {
  width: 50%;
  white-space: nowrap;
  display: inline-block;
  width: 270px;
  height: 80px;
  margin-left: 15px;
  box-sizing: border-box;
}
.scrollTest .box .list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.scrollTest .box .time {
  width: 60px;
  text-align: center;
  display: inline-block;
  position: absolute;
  top: 55px;
  left: 60px;
  color: #fff;
  font-size: 12px;
  background-color: #a19f9d;
  border-radius: 10px;
}
.scrollTest .box .HostLImg {
  width: 120px;
  height: 70px;
  border-radius: 5px;
  margin: 0 5px;
}
.scrollTest .box ._p {
  font-size: 15px;
  font-weight: 600;
  overflow: hidden;
}
.scrollTest .box .name {
  font-size: 14px;
  color: #ccc;
}
.scrollTest .box .price {
  font-size: 13px;
  color: orange;
  display: flex;
}
.scrollTest .box .price .preson {
  font-size: 12px;
  color: #000;
}
