page {
  background-color: #f1ebdc;
}

.src {
  width: 100%;
  height: 500rpx;
}

.van-stepper__minus--disabled,
.van-stepper__input,
.van-stepper__plus {
  background-color: #f1ebdc !important;
  border: 4rpx solid #e6d9bd !important;
}

.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  border-bottom: 2rpx solid #e9e0ca;
  margin: 16rpx 0;
  padding: 16rpx;
}

.money {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 600;
  border-bottom: 4rpx solid #e9e0ca;
  margin: 16rpx 0;
  font-size: 40rpx;
  padding: 16rpx;
  color: #d33e3b;
}

.numjj {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.fot {
  display: flex;
  height: 300rpx;
  align-items: center;
}